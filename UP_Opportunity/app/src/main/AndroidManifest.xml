<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.up.up_opportunity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/up_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".fragments.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".JobWebViewActivity"
                    android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AnswerActivity"></activity>
    </application>

</manifest>